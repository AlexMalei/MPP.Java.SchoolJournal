<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="school.journal.entity.Mark" table="mark" schema="school_journal_db">
        <id name="markId">
            <column name="mark_id" sql-type="int(10) unsigned"/>
        </id>
        <property name="pupilId">
            <column name="pupil_id" sql-type="int(10) unsigned"/>
        </property>
        <property name="value">
            <column name="value" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="set('simple', 'apsent', 'control', 'self', 'term', 'year')"/>
        </property>
        <property name="date">
            <column name="date" sql-type="date"/>
        </property>
        <property name="subjectId">
            <column name="subject_id" sql-type="int(10) unsigned"/>
        </property>
        <property name="teacherId">
            <column name="teacher_id" sql-type="int(10) unsigned" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>